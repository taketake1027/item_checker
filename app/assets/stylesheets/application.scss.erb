/* 全体の背景画像 */
body {
  background-image: url('<%= asset_path("drawing-pad-1209779_1920.jpg") %>');
  background-size: cover; /* 画面全体に画像をフィットさせる */
  background-position: center; /* 画像を中央に配置 */
  background-repeat: no-repeat; /* 画像を繰り返さない */
  background-image: image-url("drawing-pad-1209779_1920.jpg");

  margin: 0;
  color: #333333; /* 文字色を設定 */
}
/* 投稿画像のサイズを統一 */
.post-image {
  width: 200px;     /* 幅を200pxに固定 */
  height: 200px;    /* 高さを200pxに固定 */
  object-fit: cover; /* 縦横比を保ちながら枠内に収める */
  margin-bottom: 1rem; /* 画像の下に余白を追加 */
}

.landing-page {
  background-image: url('events-1203275_1280.jpg');
  background-size: cover;
  background-position: center;
  height: 100vh; /* 画面全体の高さに合わせる */
}


