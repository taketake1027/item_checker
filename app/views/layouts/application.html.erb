<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>イベント管理アプリ</title>
  <%= csrf_meta_tags %>  <!-- CSRFトークンを生成 -->
  <%= stylesheet_pack_tag 'application' %>
  <!-- JavaScriptの読み込みを<head>内に移動 -->
  <%= javascript_pack_tag 'application' %>
</head>
<body>
  <%= render 'layouts/header' %> <!-- ヘッダー部分の呼び出し -->

  <main>
    <%= yield %>
  </main>

  <footer>
    <p>© 2024 イベント管理アプリ</p>
  </footer>

</body>
</html>
