<!-- app/views/admin/sessions/new.html.erb -->
<div class="container">
  <h2 class="my-4 text-center">管理者ログイン</h2>

  <%= form_for(:admin, url: admin_session_path) do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <!-- メールアドレス -->
        <div class="form-group mb-3">
          <%= f.label :email, 'メールアドレス', class: "form-label" %>
          <%= f.text_field :email, autofocus: true, class: "form-control" %>
        </div>

        <!-- パスワード -->
        <div class="form-group mb-3">
          <%= f.label :password, 'パスワード', class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <!-- ログインボタン -->
        <div class="form-group text-center">
          <%= f.submit "ログイン", class: "btn btn-primary btn-lg w-100" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
