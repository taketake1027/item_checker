<div class="container mt-5">
  <div class="card shadow-lg p-4" style="max-width: 500px; margin: 0 auto; border-radius: 10px;">
    <%= form_for(:admin, url: admin_session_path) do |f| %>
      <h2 class="my-4 text-center text-primary">管理者ログイン</h2>

      <div class="form-group mb-3">
        <%= f.label :email, 'メールアドレス', class: "form-label" %>
        <%= f.text_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: "例: admin@example.com" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password, 'パスワード', class: "form-label" %>
        <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "パスワードを入力してください" %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "ログイン", class: "btn btn-primary btn-lg w-100 mt-3" %>
      </div>
    <% end %>
  </div>
</div>
