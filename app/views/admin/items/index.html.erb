<div class="container my-4">
  <h1 class="text-center mb-4">アイテム管理ページ</h1>

  <!-- 新規アイテム追加ボタン -->
  <div class="mb-3 text-center">
    <%= link_to '新規アイテム追加', new_admin_item_path, class: 'btn btn-primary' %>
  </div>

  <!-- アイテム検索フォーム -->
  <div class="mb-3 text-center">
    <%= form_with url: admin_items_path, method: :get, class: 'd-flex justify-content-center' do %>
      <%= text_field_tag :search, params[:search], placeholder: "アイテム名で検索", class: 'form-control w-50 me-2' %>
      <%= submit_tag '検索', class: 'btn btn-secondary' %>
    <% end %>
  </div>

  <!-- アイテム一覧テーブル -->
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover text-center">
      <!-- ヘッダーをダーク背景に変更 -->
      <thead class="bg-dark text-white">
        <tr>
          <th>アイテム名</th>
          <th>イベント名</th>
          <th>準備状態</th>
          <th>数量</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% if @items.any? %>
          <% @items.each do |item| %>
            <tr>
              <td class="bg-white"><%= item.name %></td>
              <td class="bg-white"><%= item.event ? item.event.name : '未設定' %></td>
              <td class="bg-white"><%= item.status %></td>
              <td class="bg-white"><%= item.amount %></td>
              <td class="bg-white">
                <%= link_to '詳細', admin_item_path(item), class: 'btn btn-info btn-sm' %>
                <%= link_to '編集', edit_admin_item_path(item), class: 'btn btn-warning btn-sm' %>
                <%= link_to '削除', admin_item_path(item), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5" class="bg-white">検索結果が見つかりませんでした。</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- ページネーション -->
  <div class="text-center">
    <%= paginate @items %>
  </div>
</div>
