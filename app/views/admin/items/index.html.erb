<h1>アイテム一覧</h1>

<%= link_to '新規アイテム追加', new_admin_item_path, class: 'btn btn-primary mb-3' %>

<table class="table">
  <thead>
    <tr>
      <th>アイテム名</th>
      <th>アイテム説明</th>
      <th>ステータス</th>
      <th>数量</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.introduction %></td>
        <td><%= item.status %></td>
        <td><%= item.amount %></td>
        <td>
          <%= link_to '詳細', admin_item_path(item), class: 'btn btn-info' %>
          <%= link_to '編集', edit_admin_item_path(item), class: 'btn btn-warning' %>
          <%= link_to '削除', admin_item_path(item), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
