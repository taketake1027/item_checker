<%= link_to '戻る', admin_items_path, class: 'btn btn-secondary' %>

<h1><%= @item.name %></h1>

<p><strong>紹介:</strong> <%= @item.introduction %></p>
<p><strong>ステータス:</strong> <%= @item.status %></p>
<p><strong>数量:</strong> <%= @item.amount %></p>

<% if @item.image.attached? %>
  <%= image_tag @item.image, class: 'item-image', alt: @item.name %>
<% else %>
  <p>画像はありません。</p>
<% end %>

<!-- 編集ボタン -->
<%= link_to '編集', edit_admin_item_path(@item), class: 'btn btn-primary' %>

<!-- 削除ボタン -->
<%= link_to '削除', admin_item_path(@item), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>

<hr>

<!-- 関連アイテムの表示 -->
<% if @item.group.present? %>
  <h3>関連アイテム:</h3>
  <ul>
    <% @item.group.items.each do |related_item| %>
      <li><%= link_to related_item.name, admin_item_path(related_item) %></li>
    <% end %>
  </ul>
<% end %>
