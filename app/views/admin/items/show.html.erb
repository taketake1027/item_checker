<!-- app/views/admin/items/show.html.erb -->

<div class="container mt-4">
  <h1 class="text-center mb-4"><%= @item.name %></h1>

  <div class="row">
    <!-- アイテム詳細情報 -->
    <div class="col-md-8">
      <div class="mb-3 p-3 bg-white rounded shadow-sm">
        <p><strong>アイテム紹介:</strong> <%= @item.introduction %></p>
      </div>
      <div class="mb-3 p-3 bg-white rounded shadow-sm">
        <p><strong>準備状態:</strong> <%= @item.status %></p>
      </div>
      <div class="mb-3 p-3 bg-white rounded shadow-sm">
        <p><strong>数量:</strong> <%= @item.amount %></p>
      </div>
    </div>

    <!-- アイテム画像 -->
    <div class="col-md-4">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, class: 'img-fluid rounded shadow', alt: @item.name %>
      <% else %>
        <p>画像はありません。</p>
      <% end %>
    </div>
  </div>

  <!-- 関連イベントの表示 -->
  <div class="mt-4">
    <div class="p-3 bg-white rounded shadow-sm">
      <p><strong>関連イベント:</strong> 
        <% if @item.event.present? %>
          <%= @item.event.name %>（開催日: <%= @item.event.start_date.strftime('%Y-%m-%d') if @item.event.start_date %>）
        <% else %>
          <span>イベントはありません。</span>
        <% end %>
      </p>
    </div>
  </div>
  <hr>

  <!-- 関連アイテムの表示 -->
  <% if @item.event.present? %>
    <div class="p-3 bg-white rounded shadow-sm">
      <h3>関連アイテム:</h3>
      <ul class="list-group">
        <% @item.event.items.each do |related_item| %>
          <li class="list-group-item">
            <%= link_to related_item.name, admin_item_path(related_item), class: 'text-decoration-none' %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
