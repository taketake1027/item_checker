<!-- app/views/admin/items/edit.html.erb -->
<div class="container mt-4">
  <h1 class="text-center mb-4">アイテムの編集</h1>

  <%= form_with(model: @item, local: true, url: admin_item_path(@item), method: :patch) do |form| %>
    <% if @item.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- アイテム名 -->
    <div class="form-group mb-3">
      <%= form.label :name, 'アイテム名' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <!-- 説明 -->
    <div class="form-group mb-3">
      <%= form.label :introduction, '説明' %>
      <%= form.text_area :introduction, class: 'form-control' %>
    </div>

    <!-- 在庫数 -->
    <div class="form-group mb-3">
      <%= form.label :amount, '在庫数' %>
      <%= form.number_field :amount, class: 'form-control' %>
    </div>

    <!-- 準備状態 -->
    <div class="form-group mb-3">
      <%= form.label :status, '準備状態' %>
      <%= form.select :status, options_for_select(['完了', '未完了'], @item.status), class: 'form-control' %>
    </div>

    <!-- イベント -->
    <div class="form-group mb-3">
      <%= form.label :event_id, 'イベント' %>
      <%= form.collection_select :event_id, Event.all, :id, :name, { prompt: 'イベントを選択' }, { class: 'form-control' } %>
    </div>

    <!-- 画像 -->
    <div class="form-group mb-3">
      <%= form.label :image, '画像' %>
      <%= form.file_field :image, class: 'form-control' %>
      <% if @item.image.attached? %>
        <div class="mt-2">
          <%= image_tag @item.image, class: 'img-fluid' %>
        </div>
      <% end %>
    </div>

    <!-- 更新ボタン -->
    <div class="text-center">
      <%= form.submit '更新', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
