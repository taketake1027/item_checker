<div class="container mt-4">
  <h2 class="text-center mb-4"><%= @user.name %> の詳細情報</h2>

  <h4 class="text-center mb-3">参加しているイベント</h4>

  <div class="table-responsive bg-light p-3 rounded">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>イベント名</th>
          <th>役割</th>
        </tr>
      </thead>
      <tbody>
        <% @user.events.each do |event| %>
          <tr>
            <td><%= event.name %></td>
            <td><%= event.role_for_user(@user).capitalize %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
