<div class="container mt-4">
  <h2 class="text-center">ユーザー管理ページ</h2>

  <!-- 検索機能 -->
  <%= form_with(url: admin_users_path, method: :get, local: true) do %>
    <div class="form-row align-items-center">
      <div class="col-sm-3 my-1">
        <%= label_tag :name, "名前" %>
        <%= text_field_tag :name, params[:name], class: "form-control form-control-sm" %>
      </div>
      <div class="col-sm-3 my-1">
        <%= label_tag :email, "メールアドレス" %>
        <%= text_field_tag :email, params[:email], class: "form-control form-control-sm" %>
      </div>
      <div class="col-sm-3 my-1">
        <%= label_tag :role, "役職" %>
        <%= select_tag :role, options_for_select(User.roles.keys.map { |role| [role.capitalize, role] }, params[:role]), class: "form-control form-control-sm" %>
      </div>
      <div class="col-auto my-1">
        <%= submit_tag "検索", class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  <% end %>

  <!-- ユーザー一覧テーブル -->
  <table class="table table-striped table-hover mt-3">
    <thead>
      <tr>
        <th>ID</th>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>役職</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role.present? ? user.role.capitalize : '未設定' %></td>
          <td>
            <!-- 詳細ページへのリンク -->
            <%= link_to '詳細', admin_user_path(user), class: "btn btn-sm btn-outline-primary" %>
            <!-- 削除ボタン -->
            <%= button_to '削除', admin_user_path(user), method: :delete, 
                  data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- ページネーション -->
  <%= paginate @users %>
</div>
