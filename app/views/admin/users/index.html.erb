<div class="container mt-4">
  <h2 class="text-center mb-4">ユーザー管理ページ</h2>

  <!-- 検索機能 -->
  <%= form_with(url: admin_users_path, method: :get, local: true) do %>
    <div class="form-row align-items-center mb-3">
      <div class="col-sm-3 my-1">
        <%= label_tag :name, "名前" %>
        <%= text_field_tag :name, params[:name], class: "form-control form-control-sm" %>
      </div>
      <div class="col-sm-3 my-1">
        <%= label_tag :email, "メールアドレス" %>
        <%= text_field_tag :email, params[:email], class: "form-control form-control-sm" %>
      </div>
      <div class="col-sm-3 my-1">
        <%= label_tag :role, "役職" %>
        <%= select_tag :role, options_for_select(User.roles.keys.map { |role| [role.capitalize, role] }, params[:role]), class: "form-control form-control-sm" %>
      </div>
      <div class="col-auto my-1">
        <%= submit_tag "検索", class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>

  <!-- ユーザー一覧テーブル -->
  <div class="table-responsive bg-light p-3 rounded">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>ID</th>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>役職</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <%= form_with model: user, url: update_role_admin_user_path(user), method: :patch do |form| %>
                <%= form.select :role, options_for_select(User.roles.keys.map { |role| [role.capitalize, role] }, user.role), class: 'form-control form-control-sm' %>
                <%= form.submit "更新", class: "btn btn-sm btn-primary" %>
              <% end %>
            </td>
            <td>
              <!-- 詳細ページへのリンク -->
              <%= link_to '詳細', admin_user_path(user), class: "btn btn-sm btn-info" %>
              <!-- 削除ボタン -->
              <%= button_to '削除', admin_user_path(user), method: :delete, 
                    data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- ページネーション -->
  <%= paginate @users, class: 'pagination justify-content-center' %>
</div>
