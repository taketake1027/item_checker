<div class="group-edit-container container my-4">
  <h1 class="text-center mb-4">グループ情報編集</h1>

  <div class="form-container border p-4 rounded shadow mx-auto" style="max-width: 600px; background-color: white;">
    <%= form_with model: @group, url: admin_group_path(@group), method: :patch, local: true do |f| %>
      
      <div class="form-group mb-3">
        <%= f.label :name, 'グループ名', class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control'%>
      </div>

      <div class="form-group mb-3">
        <%= f.label :introduction, 'グループ紹介', class: 'form-label' %>
        <%= f.text_area :introduction, class: 'form-control', rows: 4 %>
      </div>

      <div class="text-center mb-3">
        <%= f.submit '更新', class: 'btn btn-primary w-100' %>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-3">
    <%= link_to '戻る', admin_group_path(@group), class: 'btn btn-secondary' %>
  </div>
</div>
