<div class="container my-4">
  <h1 class="text-center mb-4">グループ一覧</h1>

  <!-- 新規グループ作成ボタン -->
  <div class="mb-3 text-center">
    <%= link_to '新規グループ作成', new_admin_group_path, class: 'btn btn-primary' %>
  </div>

  <!-- グループ検索フォーム -->
  <div class="mb-3 text-center">
    <%= form_with url: admin_groups_path, method: :get, class: 'd-flex justify-content-center' do %>
      <%= text_field_tag :search, params[:search], placeholder: "グループ名で検索", class: 'form-control w-50 me-2' %>
      <%= submit_tag '検索', class: 'btn btn-secondary' %>
    <% end %>
  </div>

  <!-- グループの一覧 -->
  <div class="table-responsive">
    <table class="table table-striped table-hover text-center">
      <thead>
        <tr>
          <th>グループ名</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% if @groups.any? %>
          <% @groups.each do |group| %>
            <tr>
              <td><%= group.name %></td>
              <td>
                <!-- 詳細ページボタン -->
                <%= link_to '詳細', admin_group_path(group), class: 'btn btn-info btn-sm' %>

                <!-- 編集ボタン -->
                <%= link_to '編集', edit_admin_group_path(group), class: 'btn btn-secondary btn-sm ml-2' %>

                <!-- 削除ボタン -->
                <%= link_to '削除', admin_group_path(group), method: :delete, data: { confirm: '本当に削除してもよろしいですか？' }, class: 'btn btn-danger btn-sm ml-2' %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="2">検索結果が見つかりませんでした。</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- ページネーション（もしページが多い場合） -->
  <div class="text-center">
    <%= paginate @groups %>
  </div>
</div>
