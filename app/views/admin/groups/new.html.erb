<div class="container">
  <h1>新規グループ作成</h1>

  <%= form_with model: @group, url: admin_groups_path, local: true do |f| %>
    <div class="form-group mb-3">
      <%= f.label :name, 'グループ名' %>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>

    <!-- グループの詳細 (introduction) -->
    <div class="form-group mb-3">
      <%= f.label :introduction, 'グループの詳細' %>
      <%= f.text_area :introduction, class: 'form-control', rows: 4 %>
    </div>

    <div class="form-group mb-3">
      <%= f.submit '作成', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to '戻る', admin_groups_path, class: 'btn btn-secondary' %>
</div>
