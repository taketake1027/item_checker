<div class="container my-4">
  <h1 class="text-center mb-4">新規グループ作成</h1>

  <%= form_with model: @group, url: admin_groups_path, local: true do |f| %>
    <% if @group.errors.any? %>
      <div class="alert alert-danger">
        <strong><%= @group.errors.count %>件のエラーがあります。</strong>
        <ul>
          <% @group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group mb-3">
      <!-- labelのfor属性をidと一致させる -->
      <%= f.label :name, 'グループ名', class: 'form-label', for: 'group_name' %>
      <%= f.text_field :name, class: 'form-control', placeholder: "グループ名を入力してください", id: 'group_name' %>
    </div>

    <div class="form-group mb-3">
      <!-- labelのfor属性をidと一致させる -->
      <%= f.label :introduction, 'グループの詳細', class: 'form-label', for: 'group_introduction' %>
      <%= f.text_area :introduction, class: 'form-control', rows: 4, placeholder: "グループの詳細を入力してください", id: 'group_introduction' %>
    </div>

    <div class="form-group mb-3">
      <!-- labelのfor属性をidと一致させる -->
      <%= f.label :user_ids, 'グループに参加するユーザーを選択', class: 'form-label', for: 'user_ids' %>
      <%= f.collection_check_boxes :user_ids, User.all, :id, :name do |cb| %>
        <div class="form-check">
          <!-- check_boxのidを動的に設定し、labelのfor属性と一致させる -->
          <%= cb.check_box class: 'form-check-input', id: "user_#{cb.object.id}" %>
          <%= cb.label class: 'form-check-label', for: "user_#{cb.object.id}" %>
        </div>
      <% end %>
    </div>

    <div class="text-center mb-3">
      <%= f.submit '作成', class: 'btn btn-primary' %>
    </div>
  <% end %>
  
  <div class="text-center">
    <%= link_to '戻る', admin_groups_path, class: 'btn btn-secondary' %>
  </div>
</div>
