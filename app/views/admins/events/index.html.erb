<h1>イベント一覧</h1>

<%= link_to '新しいイベントを作成', new_admin_event_path, class: 'btn btn-success' %>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>開始日時</th>
      <th>終了日時</th>
      <th>グループ</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.group&.name || 'なし' %></td>
        <td>
          <%= link_to '編集', edit_admin_event_path(event), class: 'btn btn-warning' %>
          <%= link_to '削除', admin_event_path(event), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
