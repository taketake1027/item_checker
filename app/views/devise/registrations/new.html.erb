<div class="container d-flex justify-content-center align-items-center" style="margin-top: 20px;">
  <div class="card shadow p-4" style="max-width: 500px; width: 100%;"> <!-- 幅を少し狭めて集中感を強調 -->
    <h2 class="text-center mb-4">新規登録</h2>
          <!-- エラーメッセージ -->
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- フォーム開始 -->
          <%= form_for(@user, as: :user, url: user_registration_path) do |f| %>

            <!-- 名前 -->
            <div class="form-group mb-3">
              <%= f.label :name, "名前", class: 'form-label fw-bold' %>
              <%= f.text_field :name, class: 'form-control form-control-lg', placeholder: "名前を入力してください" %>
            </div>

            <!-- メールアドレス -->
            <div class="form-group mb-3">
              <%= f.label :email, "メールアドレス", class: 'form-label fw-bold' %>
              <%= f.email_field :email, class: 'form-control form-control-lg', placeholder: "example@example.com" %>
            </div>

            <!-- パスワード -->
            <div class="form-group mb-3">
              <%= f.label :password, "パスワード", class: 'form-label fw-bold' %>
              <%= f.password_field :password, class: 'form-control form-control-lg', placeholder: "6文字以上のパスワード" %>
            </div>

            <!-- パスワード確認 -->
            <div class="form-group mb-4">
              <%= f.label :password_confirmation, "パスワード確認", class: 'form-label fw-bold' %>
              <%= f.password_field :password_confirmation, class: 'form-control form-control-lg', placeholder: "確認用パスワード" %>
            </div>

            <!-- 登録ボタン -->
            <div class="form-group text-center">
              <%= f.submit '登録', class: 'btn btn-primary btn-lg w-100' %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
