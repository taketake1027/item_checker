<!-- app/views/events/show.html.erb -->
<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h1 class="card-title"><%= @event.name %></h1>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @event.description %></p>
      <p><strong>開催日:</strong> <%= @event.event_date %></p>
      <p><strong>場所:</strong> <%= @event.location %></p>

      <div class="mt-3">
        <% if user_signed_in? %>
          <%= link_to '参加する', join_event_path(@event), method: :post, class: 'btn btn-primary' %>
        <% else %>
          <p>ログインするとイベントに参加できます。</p>
        <% end %>
      </div>

      <div class="mt-3">
        <%= link_to '戻る', events_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
