<div class="container my-4">
  <h1 class="text-center mb-4">アイテム詳細</h1>

  <!-- アイテム詳細情報 -->
  <div class="row">
    <div class="col-md-6">
      <h3>アイテム名</h3>
      <p><%= @item.name %></p>
    </div>
    <div class="col-md-6">
      <h3>イベント名</h3>
      <p><%= @event.name %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h3>準備状態</h3>
      <p><%= @item.status %></p>
    </div>
    <div class="col-md-6">
      <h3>数量</h3>
      <p><%= @item.amount %></p>
    </div>
  </div>

  <!-- アイテムの説明がある場合 -->
  <% if @item.introduction.present? %>
    <div class="row">
      <div class="col-md-12">
        <h3>説明</h3>
        <p><%= @item.introduction %></p>
      </div>
    </div>
  <% end %>

  <!-- 戻るボタン -->
  <div class="text-center mt-4">
    <%= link_to 'アイテム一覧に戻る', event_items_path(@event), class: 'btn btn-primary' %>
  </div>
</div>
