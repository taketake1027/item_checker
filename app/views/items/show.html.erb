<div class="container my-4">
  <h1 class="text-center mb-4">アイテム詳細</h1>

  <!-- アイテム詳細情報 -->
  <div class="card p-4 shadow-sm mb-4" style="background-color: white; border-radius: 8px;">
    <div class="row">
      <div class="col-md-6">
        <h3>アイテム名</h3>
        <p><%= @item.name %></p>
      </div>
      <div class="col-md-6">
        <h3>イベント名</h3>
        <p><%= @event.name %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <h3>準備状態</h3>
        <p><%= @item.status %></p>
      </div>
      <div class="col-md-6">
        <h3>数量</h3>
        <p><%= @item.amount %></p>
      </div>
    </div>

    <!-- アイテムの説明がある場合 -->
    <% if @item.introduction.present? %>
      <div class="row">
        <div class="col-md-12">
          <h3>説明</h3>
          <p><%= @item.introduction %></p>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 戻るボタン -->
  <div class="text-center mt-4">
    <%= link_to 'アイテム一覧に戻る', event_items_path(@event), class: 'btn btn-primary' %>
  </div>
</div>

<style>
  /* アイテム詳細ページ全体のカードデザイン */
  .card {
    background-color: white; /* 背景色を白に設定 */
    border-radius: 8px; /* 角を丸くする */
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 軽い影をつけて立体感を出す */
  }

  /* 各セクション（アイテム情報、説明、戻るボタン）のスタイル */
  h3 {
    font-size: 1.25rem;
    font-weight: bold;
  }

  p {
    font-size: 1rem;
    color: #333;
  }

  /* 戻るボタン */
  .btn-primary {
    padding: 10px 20px;
    font-size: 1rem;
    text-decoration: none;
  }
</style>
