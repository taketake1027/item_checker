<div class="card mb-3 p-3" id="comment_<%= comment.id %>">
  <p><strong><%= comment.user.name %></strong> <%= comment.created_at.strftime('%Y-%m-%d %H:%M') %></p>
  <p><%= comment.content %></p>
  <% if comment.user == current_user %> 
    <%= link_to '削除', event_post_comment_path(@event, @post, comment), method: :delete, remote: true, class: 'btn btn-danger btn-sm', data: { confirm: '削除しますか？' } %>
  <% end %>
</div>
