<h1 class="text-center mb-4"><%= @user.name %>さんのプロフィール</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <p><strong>メールアドレス:</strong> <%= @user.email %></p>

      <% unless current_user.email == 'guest@example.com' %>
        <!-- ゲストユーザーでない場合にプロフィール編集リンクを表示 -->
        <div class="mb-3">
          <%= link_to 'プロフィール編集', mypage_edit_path(@user), class: 'btn btn-primary w-100' %>
        </div>

        <!-- アカウント削除ボタンを表示 -->
        <div>
          <%= form_for(@user, url: user_registration_path, html: { method: :delete }) do |f| %>
            <div class="form-group">
              <%= f.submit 'アカウントを削除する', class: 'btn btn-danger w-100', data: { confirm: '本当にアカウントを削除しますか？ この操作は取り消せません。' } %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
